<?xml version="1.0" encoding="utf-8"?><!--앨범내용을 보여주거나 앨범을 생성,수정 시에 사용하는 레이아웃-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:contentScrim="@color/subcolor_0"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAlbumPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <!--[1]사진에 그림자 효과를 두어 텍스트가 잘 두드러 지도록 함.  -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11111119"
                app:layout_anchor="@+id/app_bar_layout"
                app:layout_anchorGravity="center"
                app:layout_collapseMode="parallax" />
            <!--[1] End-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/set_your_title"
                    android:maxLines="3"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPostCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시물"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserProfilePic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_image_24" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_anchor="@+id/app_bar_layout"
                app:layout_anchorGravity="start"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <!--[2] 앨범 생성 모드를 위한 버튼 -->
                <Button
                    android:id="@+id/btnCreate"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_margin="30dp"
                    android:background="@android:color/transparent"
                    android:text="생성"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_margin="30dp"
                    android:background="@android:color/transparent"
                    android:text="이전"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="gone" />
                <!--[2] End-->
                <!--[3]앨범 표시시에 등장하는 버튼들 -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="30dp"
                    android:src="@drawable/back_icon_white" />

                <ImageView
                    android:id="@+id/btnMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="25dp"
                    android:src="@drawable/ic_baseline_more_vert_24" />

                <!--[3] End-->
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <!--    <EditText-->
