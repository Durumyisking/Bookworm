<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripplebutton_none"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBookThumb"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_image_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvBookTitle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:hint="여기에 책이름이 들어갑니다"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFeedDesc"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_marginBottom="20dp"
                    android:text="여기에 리뷰 내용이 들어갑니다"
                    android:textSize="12dp" />
                <TextView

                    android:id="@+id/tvFeedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:hint="20xx년 xx월 xx일"
                    android:textSize="12dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray" />
</LinearLayout>