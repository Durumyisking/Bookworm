<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="50dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/albumThumb"
            android:layout_width="match_parent"
            android:src="@color/black"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abtitle"
            android:scaleType="fitXY"
            />
        <TextView
            android:elevation="30dp"
            android:id="@+id/albumName"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="30dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:text="앨범의 이름을 정해주세요."
            android:lines="3"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앨범의 썸네일을 정해주세요"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 사진 "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginTop="10dp"
            android:id="@+id/ivSelectedImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="@color/subcolor_0_50"
            android:text="이전"
            android:textSize="15dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnNext"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:backgroundTint="@color/subcolor_2"
            android:text="다음 단계" />
    </LinearLayout>
</LinearLayout>