<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookworm">
    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Login.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/appicon_bookworm"
        android:label="책볼레"
        android:roundIcon="@drawable/appicon_bookworm"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ProfileInfoActivity"
            android:exported="false" />
        <activity
            android:name=".User.FollowerActivity"
            android:exported="false" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakaoKey" /> <!-- SubActivities -->
        <activity
            android:name=".Feed.subActivity_Feed_Create"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Search.subActivity.search_fragment_subActivity_result"
            android:exported="false"
            android:parentActivityName=".Search.subActivity.search_fragment_subActivity_main" />
        <activity
            android:name=".Search.subActivity.search_fragment_subActivity_main"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Challenge.subActivity.subactivity_challenge_createchallenge"
            android:exported="false"
            android:parentActivityName=".MainActivity" /> <!-- Main Activities -->
        <activity
            android:name=".PreferActivity"
            android:exported="false" /> <!-- 선호장르 설정 -->
        <activity
            android:name=".JoinActivity"
            android:exported="false" /> <!-- 회원 정보 수정 -->
        <activity
            android:name=".ProfileModifyActivity"
            android:exported="false" /> <!-- 회원 정보 수정 -->
        <activity
            android:name=".ProfileSettingActivity"
            android:exported="false" /> <!-- 회원 설정 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- 메인 화면 -->
        <activity
            android:name=".Login.activity_login"
            android:exported="true"> <!-- 로그인 화면 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>